<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionBarStyle">@style/ActionBarDefault</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionBarStyle">@style/ActionBarDefault</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeActionBarElevated" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBarElevated</item>
        <item name="actionMenuTextColor">@color/colorBlackLight</item>
        <item name="android:actionMenuTextColor">@color/colorBlackLight</item>
    </style>

    <style name="ActionBarElevated" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="ActionBarDefault" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlackLight</item>
    </style>

    <style name="Toolbar.DashboardTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>
