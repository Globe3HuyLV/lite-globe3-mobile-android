<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="1"
    android:toDegrees="360" >
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        <gradient
            android:centerY="0.50"
            android:endColor="@color/colorDashboardBlue"
            android:startColor="@color/colorDashboardBlueLight"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>